unsigned int entreeIp()
{
    
    char classe;



    //Classe d'IP
    if (ip1 < 128)
    {
        classe = 'A';
    }
    else if (ip1 >= 128 && ip1 < 192)
    {
        classe = 'B';
    }
    else if (ip1 >= 192 && ip1 < 224)
    {
        classe = 'C';
    }
    else if (ip1 >= 224 && ip1 < 240)
    {
        classe = 'D';
    }
    else
    {
        classe = 'E';
    }

    return ip= (ip1<<24)|(ip2<<16)|(ip3<<8)|(ip4);
}

